                    +link('Login Users', '/users/login', 'post', false)
                    +link('Update User', '/users/update/:id', 'put')
                    +link('Delete User', '/users/delete/:id', 'delete')
                    +link('Change User Password', '/users/changepass', 'put')

            div 
                h3 Skills 
                hr/
                ul 
                    +link('Get All Skills', '/skills/')
                    +link('Add Skill', '/skills/add', 'post')
                    +link('Update Skill', '/skills/update/:id', 'put')
                    +link('Delete Skill', '/skills/delete/:id', 'delete')

            div 
                h3 Projects 
                hr/
                ul 
                    +link('Get All Projects', '/projects/')
                    +link('Get Single Project', '/projects/:id')
                    +link('Get All Publish Projects', '/projects/publish/')
                    +link('Get All Pending Projects', '/projects/pending/')
                    +link('Search Projects', '/projects/search?q=')
                    +link('Create Project', '/projects/create', 'post')
                    +link('Update Projects', '/projects/update/:id', 'put')
